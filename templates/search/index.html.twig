{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card rounded-3 shadow">
                    <div class="card-body">
                        <h2 class="card-title text-center">Recherche un utilisateur</h2>
                        {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_label(form.item) }}
                            {{ form_widget(form.item, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group text-center">
                            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>

        {% if results is not empty %}
            <div class="row mt-4 justify-content-center">
                <div class="col-md-6">
                    <div class="card rounded-3 shadow">
                        <div class="card-body text-center">
                            <h2 class="card-title">Résultats de la recherche :</h2>
                            <ul class="list-unstyled">
                                {% for result in results %}
                                    <li>
                                        Nom: {{ result.nom }}
                                    </li>
                                    <li>
                                        Prénom: {{ result.prenom }}
                                    </li>
                                    <li>
                                        Email: {{ result.email[0] }}
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
